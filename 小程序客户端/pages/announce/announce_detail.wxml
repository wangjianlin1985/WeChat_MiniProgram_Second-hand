<view class="container">
  <loading hidden="{{loadingHide}}">
    {{loadingText}}
  </loading>

  <view class="title">公告信息详情</view>
  <view class="announce_detail_view"> 
      <view class="viewItem">
        <view class="label">公告编号：</view>
        <view class="content">
          <view>{{announceId}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">公告标题：</view>
        <view class="content"> 
          <view>{{announceTitle}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">公告内容：</view>
        <view class="content"> 
          <view>{{announceContent}}</view>
        </view>
      </view>

       <view class="viewItem">
        <view class="label">发布日期：</view>
        <view class="content"> 
          <view>{{announceDate}}</view>
        </view>
      </view>

      <view>
        <navigator class="btnReturn" open-type="navigateBack" hover-class="navigator-hover">返回</navigator>
      </view>

  </view>
</view>
